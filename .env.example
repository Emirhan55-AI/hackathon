# Environment Variables for Aura AI Platform
# Copy this file to .env and fill in your API keys and passwords

# Hugging Face Token (required for accessing LLaMA models)
HF_TOKEN=your_huggingface_token_here

# Pinecone API Key (optional - for cloud vector storage)
PINECONE_API_KEY=your_pinecone_api_key_here

# OpenAI API Key (optional - for embeddings fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
POSTGRES_PASSWORD=aura_secure_password_change_this

# Monitoring Configuration
GRAFANA_PASSWORD=admin_change_this

# GPU Configuration (set to 'cpu' if no GPU available)
DEVICE=cuda

# Model Configuration
MODEL_CACHE_DIR=./models
VECTOR_STORE_PATH=./vector_store

# Security Settings
JWT_SECRET_KEY=your_jwt_secret_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Performance Settings
MAX_WORKERS=4
CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
